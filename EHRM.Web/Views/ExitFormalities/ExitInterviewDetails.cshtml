
@{
    ViewData["Title"] = "ExitInterviewDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-heading {
        color: #007bff;
        text-align: center;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .form-container {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

<div class="container mt-4">
    <h3 class="page-heading">Exit Form Details</h3>
    <div class="table-responsive">
        <table id="exitIterviewTable1" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Exit Interview Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data (Dynamically generated in backend) -->
                <tr>
                </tr>

            </tbody>
        </table>
    </div>
</div>

<!-- Exit Interview Modal -->
<div class="modal fade" id="exitInterviewModalDetail" tabindex="-1" aria-labelledby="exitInterviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exitInterviewModalLabel">Exit Interview Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="exitInterviewForm" method="post" action="/ExitFormalities/SaveExitInterviewForm">

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Employee Name:</label>
                            <input type="text" name="EmployeeName" id="EmployeeName" class="form-control" value="@ViewData["Name"]" readonly required>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Date:</label>
                            <input type="text" name="InterviewDate" id="InterviewDate" class="form-control" readonly required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Interviewer:</label>
                            <input type="text" name="Interviewer" id="Interviewer" class="form-control" readonly>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Strengths of Raps Professional Services Pvt. Ltd:</label>
                            <textarea name="Strengths" id="Strengths" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Areas of Improvement:</label>
                            <textarea name="AreasOfImprovement" id="AreasOfImprovement" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Did the organization treat you well after you decided to quit?</label>
                            <textarea name="TreatmentAfterResignation" id="TreatmentAfterResignation" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Given the opportunity, will you rejoin?</label>
                            <select name="Rejoin" id="Rejoin" class="form-select" disabled>
                                <option value="" disabled selected>Choose an option</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                                <option value="Maybe">Maybe</option>
                            </select>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Main Reason for Leaving:</label>
                            <textarea name="ReasonForLeaving" id="ReasonForLeaving" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Comparison with New Assignment:</label>
                            <textarea name="ComparisonWithNewJob" id="ComparisonWithNewJob" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Will you recommend the company? Why?</label>
                            <textarea name="Recommend" id="Recommend" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">What was your greatest challenge?</label>
                            <textarea name="GreatestChallenge" id="GreatestChallenge" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Which functions did you enjoy the most? Why?</label>
                            <textarea name="EnjoyedFunctions" id="EnjoyedFunctions" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Which functions did you enjoy the least? Why?</label>
                            <textarea name="LeastEnjoyedFunctions" id="LeastEnjoyedFunctions" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Did you feel a sense of security in your position?</label>
                            <select name="JobSecurity" id="JobSecurity" class="form-select" disabled>
                                <option value="" disabled selected>Choose an option</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                            <textarea name="JobSecurityDetails" id="JobSecurityDetails" class="form-control mt-2" placeholder="If no, please explain" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">How was the morale within your department?</label>
                            <textarea name="DepartmentMorale" id="DepartmentMorale" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Could the company have improved morale?</label>
                            <textarea name="ImproveMorale" id="ImproveMorale" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">How was your supervisor?</label>
                            <textarea name="SupervisorFeedback" id="SupervisorFeedback" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Were the working conditions suitable?</label>
                            <textarea name="WorkingConditions" id="WorkingConditions" class="form-control" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Was the benefits package satisfactory?</label>
                            <select name="BenefitsSatisfactory" id="BenefitsSatisfactory" class="form-select" disabled>
                                <option value="" disabled selected>Choose an option</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Did you feel informed about company policies?</label>
                            <select name="InformedPolicies" id="InformedPolicies" class="form-select" disabled>
                                <option value="" disabled selected>Choose an option</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                            <textarea name="PoliciesFeedback" id="PoliciesFeedback" class="form-control mt-2" placeholder="If no, please explain" readonly></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Could anything have changed your decision to leave?</label>
                            <textarea name="ChangeDecision" id="ChangeDecision" class="form-control" readonly></textarea>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label class="form-label">Additional Comments:</label>
                            <textarea name="AdditionalComments" id="AdditionalComments" class="form-control" readonly></textarea>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="downloadBtn" class="btn btn-success">
                        <i class="bi bi-download"></i> Download
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>




<script src="~/JsPDF/jspdf.js"></script>

<script>
          $(document).ready(function () {
        getExitInterviewDataDetail();
    });

    // Function to fetch Exit Interview data and populate the DataTable
    function getExitInterviewDataDetail() {
        $('#exitIterviewTable1').DataTable({
            destroy: true, // Ensures reloading without duplication
            ajax: {
                url: '/ExitFormalities/GetExitInterviewForm', // API to get Exit Interview Forms
                method: 'GET',
                dataSrc: '' // Assuming JSON array response
            },
            columns: [
                { data: 'employeeName' },
                { data: 'interviewDate' },
                {
                    data: 'id',
                    render: function (data) {
                        return `
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-info btn-sm mx-1 view-btn" data-id="${data}">
                                    <i class="bi bi-eye"></i> View & Download
                                </button>
                            </div>
                        `;
                    },
                    orderable: false
                }
            ],
            pageLength: 5,
            lengthMenu: [5, 10, 15, 20]
        });

        // Bind click event for dynamically added buttons
        $('#exitIterviewTable1 tbody').on('click', '.view-btn', function () {
            const id = $(this).data('id');
            openExitInterviewModalDetail(id);
        });
    }

    // Function to open modal and load Exit Interview details
    function openExitInterviewModalDetail(id) {
        $.ajax({
            url: `/ExitFormalities/GetExitInterviewFormDetails/${id}`,
            method: 'GET',
            success: function (response) {
                if (response.success) {
                    console.log("API Response:", response); // Debugging log

                    const data = response.data.data || response.data;
                    debugger;

                    // Populate modal fields
                    $('#EmployeeName').val(data.employeeName || "N/A");
                    $('#InterviewDate').val(data.interviewDate || "N/A");
                    $('#Interviewer').val(data.interviewer || "N/A");
                    $('#Strengths').val(data.strengths || "");
                    $('#AreasOfImprovement').val(data.areasOfImprovement || "");
                    $('#TreatmentAfterResignation').val(data.treatmentAfterResignation || "");
                    $('#Rejoin').val(data.rejoin || "");
                    $('#ReasonForLeaving').val(data.reasonForLeaving || "");
                    $('#ComparisonWithNewJob').val(data.comparisonWithNewJob || "");
                    $('#Recommend').val(data.recommend || "");
                    $('#GreatestChallenge').val(data.greatestChallenge || "");
                    $('#EnjoyedFunctions').val(data.enjoyedFunctions || "");
                    $('#LeastEnjoyedFunctions').val(data.leastEnjoyedFunctions || "");
                    $('#JobSecurity').val(data.jobSecurity || "");
                    $('#JobSecurityDetails').val(data.jobSecurityDetails || "");
                    $('#DepartmentMorale').val(data.departmentMorale || "");
                    $('#ImproveMorale').val(data.improveMorale || "");
                    $('#SupervisorFeedback').val(data.supervisorFeedback || "");
                    $('#WorkingConditions').val(data.workingConditions || "");
                    $('#BenefitsSatisfactory').val(data.benefitsSatisfactory || "");
                    $('#InformedPolicies').val(data.informedPolicies || "");
                    $('#PoliciesFeedback').val(data.policiesFeedback || "");
                    $('#ChangeDecision').val(data.changeDecision || "");
                    $('#AdditionalComments').val(data.additionalComments || "");

                    // Set the download button action
                    $('#downloadBtn').off('click').on('click', function () {
                        downloadExitInterviewDetail();
                    });

                    // Show the modal
                    $('#exitInterviewModalDetail').modal('show');
                } else {
                    alert("Error: " + response.message);
                }
            },
            error: function () {
                alert("An error occurred while fetching the data.");
            }
        });
    }

    // Function to download the Exit Interview PDF
      function downloadExitInterviewDetail() {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        // Set PDF Title
        doc.setFont("helvetica", "bold");
        doc.setFontSize(16);
        doc.text("Exit Interview Report", 20, 20);

        // Set standard font
        doc.setFont("helvetica", "normal");
        doc.setFontSize(12);
        let y = 40; // Initial Y position

        // Function to add fields with label & wrapped text
        const addField = (label, value) => {
            const maxWidth = 120; // Max width for wrapped text
            const lineHeight = 7; // Line spacing

            // Add label in bold
            doc.setFont("helvetica", "bold");
            doc.text(label, 20, y);

            // Add value text with proper word wrapping
            doc.setFont("helvetica", "normal");
            let textLines = doc.splitTextToSize(value || "N/A", maxWidth);
            doc.text(textLines, 80, y);

            // Adjust Y position based on number of lines
            y += (textLines.length * lineHeight) + 3; // Extra spacing
        };

        // Extract values from modal input fields
        const getValue = (id) => document.getElementById(id)?.value.trim() || "N/A";

        const employeeName = getValue("EmployeeName");
        const interviewDate = getValue("InterviewDate");
        const interviewer = getValue("Interviewer");
        const strengths = getValue("Strengths");
        const areasOfImprovement = getValue("AreasOfImprovement");
        const treatmentAfterResignation = getValue("TreatmentAfterResignation");
        const rejoin = getValue("Rejoin");
        const reasonForLeaving = getValue("ReasonForLeaving");
        const comparisonWithNewJob = getValue("ComparisonWithNewJob");
        const recommend = getValue("Recommend");
        const greatestChallenge = getValue("GreatestChallenge");
        const enjoyedFunctions = getValue("EnjoyedFunctions");
        const leastEnjoyedFunctions = getValue("LeastEnjoyedFunctions");
        const jobSecurity = getValue("JobSecurity");
        const jobSecurityDetails = getValue("JobSecurityDetails");
        const departmentMorale = getValue("DepartmentMorale");
        const improveMorale = getValue("ImproveMorale");
        const supervisorFeedback = getValue("SupervisorFeedback");
        const workingConditions = getValue("WorkingConditions");
        const benefitsSatisfactory = getValue("BenefitsSatisfactory");
        const informedPolicies = getValue("InformedPolicies");
        const policiesFeedback = getValue("PoliciesFeedback");
        const changeDecision = getValue("ChangeDecision");
        const additionalComments = getValue("AdditionalComments");

        // Add extracted values to PDF
        addField("Employee Name:", employeeName);
        addField("Interview Date:", interviewDate);
        addField("Interviewer:", interviewer);
        addField("Strengths:", strengths);
        addField("Areas of Improvement:", areasOfImprovement);
        addField("Treatment After Resignation:", treatmentAfterResignation);
        addField("Would Rejoin:", rejoin);
        addField("Reason for Leaving:", reasonForLeaving);
        addField("Comparison with New Job:", comparisonWithNewJob);
        addField("Would Recommend RAPS:", recommend);
        addField("Greatest Challenge:", greatestChallenge);
        addField("Enjoyed Functions:", enjoyedFunctions);
        addField("Least Enjoyed Functions:", leastEnjoyedFunctions);
        addField("Job Security:", jobSecurity);
        addField("Job Security Details:", jobSecurityDetails);
        addField("Department Morale:", departmentMorale);
        addField("How to Improve Morale:", improveMorale);
        addField("Supervisor Feedback:", supervisorFeedback);
        addField("Working Conditions:", workingConditions);
        addField("Benefits Satisfactory:", benefitsSatisfactory);
        addField("Informed About Policies:", informedPolicies);
        addField("Policies Feedback:", policiesFeedback);
        addField("Anything Change Decision:", changeDecision);
        addField("Additional Comments:", additionalComments);

        // Save as PDF
        doc.save(`Exit_Interview_${employeeName.replace(/\s+/g, "_")}.pdf`);
    }


</script>

