@model ResignationFormViewModel
@using EHRM.ViewModel.ExitFormalities

@{
    ViewBag.Title = "Resignation Letter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-heading {
        color: #007bff;
        text-align: center;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .form-container {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<div class="container mt-1">
    <div class="col-12 text-center py-1 mb-2">
        <h3 class="page-heading">Resignation Form</h3>
    </div>
</div>

<div class="container mt-4">
    @if (TempData["ToastType"] != null && TempData["ToastMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                showToast('@TempData["ToastType"]', '@TempData["ToastMessage"]');
            });
        </script>
    }
    <div class="asset-form mb-5">
        <div class="card p-4 form-container">
            <div class="card-body">
                <form id="ResignationForm" asp-controller="ExitFormalities" asp-action="SaveResignationForm" method="post">

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <p>
                                To,<br>
                                <strong>The Head of Human Resources</strong><br>
                                Raps Professional Services Private Limited<br>
                                B-17, 01st Floor, Sec-03, Noida- 201301 India.
                            </p>
                        </div>
                    </div>

                    <!-- Resignation Details -->
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <p>
                                Please accept this letter as formal notification of my resignation from my position as
                                <input asp-for="Position" class="form-control d-inline w-auto" placeholder="Your Position" /> . My final day with Raps Professional Services Pvt. Ltd. is.
                                <input asp-for="FinalDay" type="date" class="form-control d-inline w-auto" placeholder="Choose Date" required />
                                
                            </p>
                            <p>
                                I would like to thank you for the opportunity to have worked in the position for the past
                                <input asp-for="TotalMonths" class="form-control d-inline w-auto" placeholder="Total Days (In Months)" required />
                                department at Raps Professional Services Pvt. Ltd.
                                I have learned a great deal during my time here and have enjoyed
                                collaborating with my colleagues. I will take a lot of what I have learned with me in my career and
                                look back at my time here as a valuable period of my professional life
                            </p>
                            <p>
                                Kindly accept my resignation and issue Service letter/certificate for further submission to new
                                employer
                            </p>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Your's Sincerely'</label>
                            <input asp-for="EmployeeName" class="form-control" id="EmployeeName">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="ResignationDate" class="form-label">Resignation Date</label>
                            <input asp-for="ResignationDate" type="text" class="form-control" name="ResignationDate" id="ResignationDate" required readonly />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Employee Signature</label>
                            <input asp-for="EmployeeSignature" class="form-control" id="EmployeeSignature" value="@ViewData["Name"]" readonly>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-custom">Submit Resignation</button>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var today = new Date();
        var formattedDate = today.toISOString().split('T')[0]; // Format: YYYY-MM-DD
        $("#ResignationDate").val(formattedDate);


    });
</script>

