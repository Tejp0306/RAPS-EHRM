@model EHRM.Web.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/pic/rapslogo.png" />
    <link href="~/CustomStyle/Login.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Global Styles */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%; /* Ensure full height */
            overflow: hidden; /* Disable scroll */
        }

        .container-fluid {
            height: 100vh; /* Use full viewport height */
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden; /* Prevent scrolling */
        }

        .row {
            width: 100%;
            overflow: hidden; /* Prevent overflow */
        }

        /* Left Column - Image and Description */
        .col-md-8 {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            max-width: 750px;
            overflow: hidden; /* Prevent overflow */
        }

        .img-fluid {
            width: 80%;
            margin-bottom: 30px;
        }

        .text-center h3 {
            font-size: 32px;
            color: #000000;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .text-center p {
            font-size: 16px;
            color: #0f74cb;
            line-height: 1.6;
        }

        /* Right Column - Login Form */
        .col-md-4 {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            /* Remove box-shadow to eliminate the 3D effect */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transform: scale(1); /* No scaling effect */
            transition: all 0.3s ease;
            overflow: hidden; /* Prevent overflow */
            position: relative; /* Needed for absolute positioning of the tooltip */
        }

        .login-container {
           /*  width: 100%; */
            max-width: 400px;
            max-height: 500px;
        }

        h2 {
            font-size: 28px;
            color: #2e3b4e;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 700;
        }

        .form-group label {
            font-size: 14px;
            color: #2e3b4e;
            margin-bottom: 5px;
        }

        .form-control {
            padding: 12px;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
            box-sizing: border-box;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            }

        /* Button Styles */
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px;
            font-size: 18px;
            color: white;
            font-weight: 600;
            width: 100%;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darken the background color on hover */
                color: white; /* Ensure the text color is white when hovered */
                cursor: pointer;
            }

        .mt-3 a {
            color: #007bff;
            font-size: 14px;
            text-decoration: none;
        }

            .mt-3 a:hover {
                text-decoration: underline;
            }

        /* Tooltip Styles */
        .tooltip-inner {
            font-size: 12px;
            padding: 15px;
            background-color: #007bff; /* Blue background */
            color: white; /* White text */
            border-radius: 5px;
            white-space: pre-line; /* Ensure line breaks inside the tooltip */
        }

        .tooltip-arrow {
           /*  border-top-color: #007bff; */ /* Blue arrow */
        }

        /* Exclamation icon in the top right corner */
        .exclamation-icon {
            font-size: 20px;
            position: absolute;
            top: 10px;
            right: 10px; /* Position the icon at the top right */
            cursor:grabbing;
            color: #007bff; /* Blue exclamation mark */
            font-weight:800;
        }
        .note{
            border: 1px solid #0f1116;
            box-shadow: -6px 5px #505350ad;
            padding: 10px;
            background: #0f1116;
            color: var(--bs-yellow);
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_Toaster")

    <!-- Main Row -->
    <div class="container-fluid">
        <div class="row w-100">
            <!-- 8-column section on the left for Image and Description -->
            <div class="col-md-8 d-none d-md-flex justify-content-center align-items-center flex-column">
                <!-- Image centered in the 8-column space -->
                <img src="https://www.rapscorp.com/wp-content/uploads/2024/10/RapsConsultingInc-768x105-1.png" alt="Raps Consulting" class="img-fluid mb-4">

                <!-- Description about Employee and HR Management Platform -->
                <div class="text-center">
                    <h4 style="color: #000000;" class="mb-3">Empowering Innovation. Delivering Results.</h4>
                    <p style="color: #0f74cb;" class="mb-3">
                        <i>Welcome to the Employee & HR Management Platform :</i>
                    </p>
                    <p style="color: #0f74cb;">
                        <i> This platform is designed to streamline and optimize your organization's HR processes. Once you log in, you can manage employee data, track performance, handle leave requests.</i>
                    </p>
                    <p style="color: #0f74cb;">
                        <i> Whether you're a manager or an HR professional, this platform provides you with the tools to enhance employee engagement, improve productivity, and align human resource strategies with your business goals.</i>
                    </p>
                    
                </div>
                <div class="note">
                    <p>
                        <i>Note : </i>
                    </p>
                    <p>
                        <i>Enter below given Username and Password</i>
                        <br/>
                        <i>
                            Username : ehrmuser@rapscorp.com 
                            <br/>
                            Password : ehrm@123
                        </i>
                    </p>
                </div>

                
            </div>

            <!-- 4-column login form -->
            <div class="col-md-4 col-12">
                <div class="login-container" style="position: relative;">
                    <!-- Exclamation Icon for Tooltip inside the login-container -->
                    <button type="button" class="btn btn-link exclamation-btn exclamation-icon" data-bs-toggle="tooltip" data-bs-html="true" data-bs-placement="top"
                            title="1. Enter your Username and Password.<br>2. Click the Login button to access your account.<br>3. If you forget your password, click on 'Forgot Password?'">
                        <i class="fas fa-exclamation-circle"></i>
                    </button>
                    <h2 class="text-center">Login</h2>
                    <form asp-controller="Account" asp-action="SaveLogin" class="login-form">
                        @if (TempData["ToastType"] != null && TempData["ToastMessage"] != null)
                        {
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    // Call the showToast function directly with TempData values
                                    showToast('@TempData["ToastType"]', '@TempData["ToastMessage"]');
                                });
                            </script>
                        }
                        <div class="form-group">
                            <label asp-for="Email">Username:</label>
                            <input asp-for="Email" type="text" class="form-control" id="Email" name="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" name="password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>
                                <input asp-for="RememberMe" type="checkbox"> Remember Me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>

                        <!-- Forgot Password Link -->
                        <div class="form-group mt-3 text-center">
                            <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
</body>
</html>
