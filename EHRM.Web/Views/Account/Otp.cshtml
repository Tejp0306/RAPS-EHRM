@model EHRM.Web.Models.OtpViewModel

@{
    ViewData["Title"] = "Otp";
    Layout = null;
}
<link href="~/CustomStyle/Login.css" rel="stylesheet" />
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<style>
    /* Global Styles */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
        height: 100vh;
        background: url('https://via.placeholder.com/1500') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Blur Effect */
    .blur-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        filter: blur(10px);
        z-index: -1;
    }

    /* Login Form Container */
    .login-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 350px; /* Reduced width */
    }

    h2 {
        text-align: center;
        color: #2e3b4e;
        font-size: 24px; /* Reduced font size */
        font-weight: 600;
        margin-bottom: 20px; /* Reduced margin */
    }

    .form-group label {
        font-size: 14px; /* Reduced font size */
        color: #2e3b4e;
        margin-bottom: 5px;
    }

    .form-control {
        padding: 10px; /* Reduced padding */
        font-size: 14px; /* Reduced font size */
        border-radius: 8px;
        border: 1px solid #ccc;
        margin-bottom: 15px; /* Reduced margin */
        box-sizing: border-box;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    button {
        background-color: #007bff;
        color: white;
        padding: 10px; /* Reduced padding */
        font-size: 16px; /* Reduced font size */
        width: 100%;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #0056b3;
        }

    .mt-3 a {
        color: #007bff;
        font-size: 14px;
        text-decoration: none;
    }

        .mt-3 a:hover {
            text-decoration: underline;
        }

    /* Floating instruction style */
    .floating-instruction {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 123, 255, 0.8);
        color: white;
        padding: 8px 16px; /* Reduced padding */
        border-radius: 8px;
        font-size: 14px; /* Reduced font size */
        font-weight: 600;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }
</style>

<body>
    <div class="blur-background"></div>

    @await Html.PartialAsync("_Toaster")

    @if (TempData["ToastType"] != null && TempData["ToastMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                // Call the showToast function directly with TempData values
                showToast('@TempData["ToastType"]', '@TempData["ToastMessage"]');
            });
        </script>
    }

    <!-- Floating Instruction -->
    <div class="floating-instruction">
        Please enter the OTP sent to your email to verify your account.
    </div>

    <!-- OTP Verification Form -->
    <div class="login-container">
        <h2>Verify OTP</h2>
        <form class="login-form" asp-controller="Account" asp-action="Otp" method="post">
            <div class="form-group">
                <label asp-for="Otp">Enter OTP</label>
                <input asp-for="Otp" type="text" class="form-control" required />
                <span asp-validation-for="Otp" class="text-danger"></span>
            </div>
            <button type="submit">Verify OTP</button>
        </form>
    </div>
</body>
