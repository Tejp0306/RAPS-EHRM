
@{
    ViewData["Title"] = "VerificationScreen";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container rounded bg-white mt-5 mb-5">
    <form>
        <div class="row">
            <!-- Verification Heading Outside the Card -->
            <div class="col-12 bg-secondary text-center py-1 mb-4">
                <h2 class="mb-0 text-white">Verification</h2>
            </div>

            <!-- Profile Picture Section (2/12 columns) -->
            <div class="col-md-2 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <span class="font-weight-bold">Edogaru</span>
                    <span class="text-black-50">edogaru@mail.com.my</span>
                    <span> </span>
                </div>
            </div>

            <div class="col-md-6 border-right">
                <!-- Card Container with Profile Form -->
                <div class="card">
                    <div class="p-3 py-5">
                        <!-- Employee ID and Title -->
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label class="labels">Employee ID *</label>
                                <input type="text" class="form-control" placeholder="Enter Employee ID" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Title *</label>
                                <textarea class="form-control" placeholder="Enter Title" rows="1"></textarea>
                            </div>
                        </div>

                        <!-- Full Name and Login ID -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Full Name *</label>
                                <input type="text" class="form-control" placeholder="Enter Full Name" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Login ID *</label>
                                <input type="text" class="form-control" placeholder="Enter Login ID" value="">
                            </div>
                        </div>

                        <!-- Role and Date of Birth -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Role *</label>
                                <textarea class="form-control" placeholder="Enter Role" rows="1"></textarea>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Date of Birth *</label>
                                <input type="text" class="form-control" placeholder="Enter Your D.O.B" value="">
                            </div>
                        </div>

                        <!-- Gender and Team Name -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Gender *</label>
                                <textarea class="form-control" placeholder="Enter Gender" rows="1"></textarea>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Team Name *</label>
                                <textarea class="form-control" placeholder="Enter Team Name" rows="1"></textarea>
                            </div>
                        </div>

                        <!-- Phone Number and Email Address -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Phone Number *</label>
                                <input type="text" class="form-control" placeholder="Enter Phone Number" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Email Address *</label>
                                <input type="email" class="form-control" placeholder="Enter Email Address" value="">
                            </div>
                        </div>

                        <!-- Marital Status and Marriage Anniversary -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Marital Status</label>
                                <input type="text" class="form-control" placeholder="Enter Marital Status" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Marriage Anniversary</label>
                                <input type="text" class="form-control" placeholder="Enter Marriage Anniversary Date" value="">
                            </div>
                        </div>

                        <!-- Home Phone -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Home Phone</label>
                                <input type="text" class="form-control" placeholder="Enter Home Number" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Street *</label>
                                <input type="text" class="form-control" placeholder="Enter Street" value="">
                            </div>
                        </div>

                        <!-- Address Details Section -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">City *</label>
                                <input type="text" class="form-control" placeholder="Enter City" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Country *</label>
                                <input type="text" class="form-control" placeholder="Enter Country" value="">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Zip Code (optional)</label>
                                <input type="text" class="form-control" placeholder="Enter Zip Code" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Nationality *</label>
                                <input type="text" class="form-control" placeholder="Enter Nationality" value="">
                            </div>
                        </div>

                        <!-- Employment Details Section -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Department *</label>
                                <input type="text" class="form-control" placeholder="Enter Department Name" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Role *</label>
                                <input type="text" class="form-control" placeholder="Enter Role Name" value="">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Joining Date *</label>
                                <input type="text" class="form-control" placeholder="Enter Joining Date" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Work Location *</label>
                                <input type="text" class="form-control" placeholder="Enter Work Location" value="">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Employee Status *</label>
                                <input type="text" class="form-control" placeholder="Enter Employee Status" value="">
                            </div>
                        </div>

                        <!-- Emergency Contact Details Section -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Emergency Contact Name </label>
                                <input type="text" class="form-control" placeholder="Enter Emergency Contact Name" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Emergency Contact Number </label>
                                <input type="text" class="form-control" placeholder="Enter Emergency Contact Number" value="">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Bank Account Number</label>
                                <input type="text" class="form-control" placeholder="Enter Bank Account Number" value="">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Tax Identification Number (TIN)</label>
                                <input type="text" class="form-control" placeholder="Enter TIN for tax-related purposes" value="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Experience Section (4/12 columns) -->
            <div class="col-md-4">
                <div class="p-3 py-5">

                    <!-- Employee Type -->
                    <div class="col-md-12">
                        <label class="labels">Employee Type *</label>
                        <input type="text" class="form-control" placeholder="Enter Employment Type" required>
                    </div><br>

                    <!-- Appointment Date -->
                    <div class="col-md-12">
                        <label class="labels">Appointment Date *</label>
                        <input type="text" class="form-control" placeholder="Enter Appointment Date" required>
                    </div><br>

                    <!-- Start Date -->
                    <div class="col-md-12">
                        <label class="labels">Start Date *</label>
                        <input type="text" class="form-control" placeholder="Enter Start Date" required>
                    </div><br>

                    <!-- End Date (Optional for Temporary Employees) -->
                    <div class="col-md-12">
                        <label class="labels">End Date (optional for temporary employees)</label>
                        <input type="text" class="form-control" placeholder="Enter End Date">
                    </div><br>

                    <!-- Total Service -->
                    <div class="col-md-12">
                        <label class="labels">Total Service *</label>
                        <input type="text" class="form-control" placeholder="Enter Total Service" required>
                    </div><br>

                    <!-- Appointed Service -->
                    <div class="col-md-12">
                        <label class="labels">Appointed Service *</label>
                        <input type="text" class="form-control" placeholder="Enter Appointed Service" required>
                    </div><br>

                    <!-- Employment Status -->
                    <div class="col-md-12">
                        <label class="labels">Employment Status *</label>
                        <input type="text" class="form-control" placeholder="Enter Employment Status" required>
                    </div><br>

                    <!-- Manager Name -->
                    <div class="col-md-12">
                        <label class="labels">Manager Name</label>
                        <input type="text" class="form-control" placeholder="Enter Manager Name" required>
                    </div><br>

                </div>
            </div>

        </div>
    </form>
</div>