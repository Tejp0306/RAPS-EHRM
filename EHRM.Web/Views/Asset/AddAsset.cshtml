<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/CustomScripts/Asset.js"></script>
<script>
    $('#IssueDate').datepicker({
        changeMonth: true,
        changeYear: true,
        yearRange: '1950:2070',
        dateFormat: 'dd-MM-yy',
        minDate: '0',
        defaultDate: new window.Date
    });

</script>
