<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager View - Employee Overview</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .card-deck .card {
            margin-bottom: 20px;
        }

        .table th, .table td {
            text-align: center;
        }

        .leave-status {
            font-weight: bold;
            color: #fff;
            padding: 5px;
            border-radius: 5px;
        }

        .approved {
            background-color: #28a745;
        }

        .pending {
            background-color: #ffc107;
        }

        .rejected {
            background-color: #dc3545;
        }

        .footer {
            background-color: #f1f1f1;
            padding: 10px;
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <!-- Main content -->
        <div class="content-header">
            <h3>Manager Dashboard</h3>
            <button class="btn btn-primary">Add New Employee</button>
        </div>

        <!-- Employee Stats Section -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <!-- Total Employees Card -->
            <div class="col">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Total Employees</h5>
                        <p class="card-text">150</p>
                    </div>
                </div>
            </div>

            <!-- Employees on Leave Card -->
            <div class="col">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Employees on Leave</h5>
                        <p class="card-text">12</p>
                    </div>
                </div>
            </div>

            <!-- Employees Available Card -->
            <div class="col">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Employees Available</h5>
                        <p class="card-text">138</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Employee Section -->
        <h4 class="mt-4">Employees </h4>
        <div style="max-height: 300px; overflow-y: auto;">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Employee Name</th>
                        <th>Project Name</th>

                    </tr>
                </thead>
                <tbody>
                    <!-- Employee Row Example -->
                    <tr>
                        <td>1</td>
                        <td>John</td>
                        <td>--</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Jane Smith</td>
                        <td>--</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>David Lee</td>                
                        <td>--</td>
                    </tr>
                </tbody>
            </table>

        <!-- Employee Table Section -->
        <h4 class="mt-4">Employee Leave Details</h4>
        <div style="max-height: 250px; overflow-y: auto;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Total Leave Days</th>
                    <th>Leave Status</th>
                </tr>
            </thead>
            <tbody>
                <!-- Employee Row Example -->
                <tr>
                    <td>John Doe</td>
                    <td>12</td>
                    <td><span class="leave-status approved">Approved</span></td>
                </tr>
                <tr>
                    <td>Jane Smith</td>
                    <td>15</td>
                    <td><span class="leave-status pending">Pending</span></td>
                </tr>
                <tr>
                    <td>David Lee</td>
                    <td>8</td>
                    <td><span class="leave-status rejected">Rejected</span></td>
                </tr>
                <tr>
                    <td>Alice Brown</td>
                    <td>10</td>
                    <td><span class="leave-status approved">Approved</span></td>
                </tr>
                <tr>
                    <td>Alice Brown</td>
                    <td>10</td>
                    <td><span class="leave-status approved">Approved</span></td>
                </tr>
            </tbody>
        </table>
    </div>

</body>