<script>
    $(document).ready(function () {
        // Event listener for the "View" button
        $('.viewBtn').on('click', function () {
            // Get the employee ID from the button's data attribute
            var empId = $(this).data('emp-id'); // Get empId from the button

            // Show the modal
            $('#punchModal').modal('show');

            // Fetch the punch data using AJAX, passing empId
            $.ajax({
                url: '@Url.Action("GetPunch", "Calendar")', // Use your controller action URL
                type: 'GET',
                data: { empId: empId }, // Pass empId in the query parameters
                dataType: 'json',
                success: function (data) {
                    if (data && Array.isArray(data)) {
                        // Populate the table dynamically
                        var tableBody = $('#punchTable tbody');
                        tableBody.empty(); // Clear any existing rows

                        // Loop through the data and add rows to the table
                        data.forEach(function (item) {
                            var row = '<tr>' +
                                '<td>' + item.id + '</td>' +
                                '<td>' + item.punchDate + '</td>' +
                                '<td>' + item.punchintime + '</td>' +
                                '<td>' + item.punchouttime + '</td>' +
                                '<td>' + item.totalhours + '</td>' +
                                '</tr>';
                            tableBody.append(row);
                        });
                    } else {
                        // Handle the case where the data is not in the expected format
                        alert('Failed to load punch data.');
                    }
                },
                error: function (xhr, status, error) {
                    // Handle errors
                    alert('An error occurred while fetching punch data.');
                }
            });
        });

        // Event listener for the custom close button
        $('#closeModalBtn').on('click', function () {
            // Close the modal programmatically
            $('#punchModal').modal('hide');
        });
    });
</script>

