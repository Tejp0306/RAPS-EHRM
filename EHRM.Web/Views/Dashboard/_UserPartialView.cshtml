<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile with Tabs</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 30px;
        }

        /* Header Styling */
        .profile-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .profile-header h2 {
                font-size: 2.5rem;
                color: #343a40;
                font-weight: 600;
            }

        /* Tabs Navigation */
        .nav-tabs {
            border-bottom: 2px solid #dee2e6;
        }

            .nav-tabs .nav-item .nav-link {
                font-size: 1.1rem;
                color: #495057;
                padding: 12px 20px;
                border-radius: 0;
                border: none;
                transition: all 0.3s ease;
            }

                .nav-tabs .nav-item .nav-link:hover {
                    background-color: #e9ecef;
                    color: #007bff;
                }

                .nav-tabs .nav-item .nav-link.active {
                    color: white;
                    border: 2px solid green;
                    background-color: green;
                    border-radius: 10rem;
                }

        /* Tab Content */
        .tab-content {
            padding: 20px;
            background-color: #ffffff;
            /* border: 1px solid #dee2e6; */
            border-radius: 8px;
        }

        /* Profile Tab */
        #profile h3 {
            font-size: 1.8rem;
            color: #343a40;
            margin-bottom: 20px;
        }

        #profile p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #495057;
        }

            #profile p strong {
                font-weight: bold;
            }

        /* Qualification Tab */
        #qualification h3 {
            font-size: 1.8rem;
            color: #343a40;
            margin-bottom: 20px;
        }

        #qualification p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #495057;
        }

            #qualification p strong {
                font-weight: bold;
            }

        /* Settings Tab */
        #settings h3 {
            font-size: 1.8rem;
            color: #343a40;
            margin-bottom: 20px;
        }

        #settings p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #495057;
        }

        #settings button {
            font-size: 1rem;
            padding: 10px 20px;
            margin-right: 10px;
            margin-top: 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            #settings button:hover {
                transform: translateY(-2px);
            }

        #settings .btn-primary {
            background-color: #007bff;
            border: none;
        }

        #settings .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

        /* Activity Log Tab */
        #activity h3 {
            font-size: 1.8rem;
            color: #343a40;
            margin-bottom: 20px;
        }

        #activity ul {
            list-style-type: none;
            padding-left: 0;
        }

            #activity ul li {
                font-size: 1.1rem;
                color: #495057;
                line-height: 1.6;
                margin-bottom: 10px;
            }

                #activity ul li:before {
                    content: "• ";
                    color: #007bff;
                }
       
    </style>
</head>
<body>

    <div class="container">
        <div class="profile-header">
            <h2>User Profile</h2>
        </div>

        <!-- Tabs navigation -->
        <div class="tabs">
            <ul class="nav nav-tabs" id="userTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="qualification-tab" data-bs-toggle="tab" href="#qualification" role="tab" aria-controls="qualification" aria-selected="false">Qualification</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="settings-tab" data-bs-toggle="tab" href="#settings" role="tab" aria-controls="settings" aria-selected="false">Settings</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="activity-tab" data-bs-toggle="tab" href="#activity" role="tab" aria-controls="activity" aria-selected="false">Activity Log</a>
                </li>
                @* <li class="nav-item" role="presentation"> *@
                @*     <a class="nav-link" id="qualification-tab" data-bs-toggle="tab" href="#qualification" role="tab" aria-controls="qualification" aria-selected="false">Qualification</a> *@
                @* </li> *@
            </ul>
        </div>

        <!-- Tab content -->
        <div class="tab-content" id="userTabsContent">
            <!-- Profile Tab Content -->
            <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <h3>Profile Information</h3>
                <p><strong>First Name:</strong> John</p>
                <p><strong>Last Name:</strong> Doe</p>
                <p><strong>Address:</strong> ------</p>
                <p><strong>Contact Number:</strong> 9871****12</p>
                <p><strong>Email-Address:</strong> johndoe@example.com</p>
            </div>

            <!-- Qualification Tab Content -->
            <div class="tab-pane fade" id="qualification" role="tabpanel" aria-labelledby="qualification-tab">
                <h3>Qualification Information</h3>
                <p><strong>Highest Degree:</strong> Master's in Computer Science</p>
                <p><strong>Institution:</strong> XYZ University</p>
                <p><strong>Year of Graduation:</strong> 2022</p>
                <p><strong>Other Qualifications:</strong></p>
                @* <ul> *@
                @*     <li>Certified AWS Solutions Architect (2023)</li> *@
                @*     <li>Full-Stack Web Development Bootcamp (2021)</li> *@
                @* </ul> *@
            </div>

            <!-- Settings Tab Content -->
            <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                <h3>Account Settings</h3>
                <p>Here you can manage your account settings.</p>
                <button class="btn btn-primary">Edit Profile</button>
                <button class="btn btn-secondary">Change Password</button>
            </div>

            <!-- Activity Log Tab Content -->
            <div class="tab-pane fade" id="activity" role="tabpanel" aria-labelledby="activity-tab">
                <h3>Recent Activity</h3>
                <ul>
                    <li>Logged in on Dec 14, 2024</li>
                    <li>Updated profile on Dec 13, 2024</li>
                    <li>Changed password on Dec 12, 2024</li>
                </ul>
            </div>
        </div>
    </div>
</body>