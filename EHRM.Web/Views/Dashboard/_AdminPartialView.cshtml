        .container-fluid {
            padding-left: 15px;
            padding-right: 15px;
        }

        /* Dashboard Grid Cards */
        .grid-wrapper {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        /* Card Styling */
        .dashboard-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-radius: 8px;
            color: white;
            font-size: 1.2rem;
        }

        .grid-card h5 {
            font-size: 1.5rem;
        }

        .grid-card p {
            font-size: 1.2rem;
        }

        .card-body.grid-card {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 120px;
            text-align: center;
        }

            .card-body.grid-card p {
                margin-top: 10px;
                font-size: 1.5rem;
            }

        /* Specific Colors for Grid Cards */
        .card-body[style*="background-color: #007bff;"] {
            background-color: #007bff;
        }

        .card-body[style*="background-color: #28a745;"] {
            background-color: #28a745;
        }

        .card-body[style*="background-color: #dc3545;"] {
            background-color: #dc3545;
        }

        .card-body[style*="background-color: #ffc107;"] {
            background-color: #ffc107;
        }

        /* Table Styling */
        .table th,
        .table td {
            vertical-align: middle;
            padding: 12px;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .table-striped tbody tr:hover {
            background-color: #f1f1f1;
        }

        /* Card Section */
        .card-section {
            margin-top: 20px;
            margin-bottom: 30px;
        }

            .card-section h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
            }

        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        /* Employee Attendance and Leave Management Section */
        .row.card-section {
            display: flex;
            justify-content: space-between;
        }

        .col-md-6 {
            flex: 0 0 48%;
        }

        /* Performance Section */
        .card-section h3 {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .card-body button {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            font-size: 1.1rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-info {
            background-color: #17a2b8;
