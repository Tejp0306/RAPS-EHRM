@using EHRM.ViewModel.Master
@model AddNoticeBoardViewModel
@{
    ViewData["Title"] = "MsterRoles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/customscripts/addnoticeboard.js"></script>
<link href="~/customstyle/addnoticeboard.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="notice-board">
        <h1><u>NOTICE</u></h1>

        <form asp-controller="Master" asp-action="CreateNotice" method="post" enctype="multipart/form-data">
            <input type="hidden" id="NoticeBoardId" name="id" />
            <!-- News Heading -->
            <div class="notice-item">
                <label for="HeadingName">Notice Heading * :</label>
                <input asp-for="HeadingName" name="HeadingName" placeholder="Enter notice heading" required>
            </div>

            <!-- News Description -->
            <div class="notice-item">
                <label for="Description">Notice Description * :</label>
                <textarea asp-for="Description" name="Description" placeholder="Enter notice description" required></textarea>
            </div>

            @* <div class="notice-item"> *@
            @*     <label for="File">Notice Description:</label> *@
            @*     <input asp-for="File" type="file" name="File" placeholder="Enter news heading" required> *@
            @* </div> *@
            <div class="notice-item">
                <label for="File">Upload Description (Optional):</label>
                <input asp-for="File" type="file" name="File" placeholder="Select a file (Optional)"img src="~/Files/">
            </div>
            <!-- Submit Button -->
            <div class="notice-item">
                <button type="submit" class="submit-btn">Create</button>
            </div>
        </form>
    </div>


    <!-- Modal to display file/image -->
    <div id="fileViewer" >
        <div id="fileContent"></div>
       
        @* <button onclick="closeViewer()"></button> *@
    </div>

    <!-- Notice Table -->
    <div class="table">
    <h2><u>NOTICE-DETAILS</u></h2>
        <div class="table-responsive">
            <table id="NoticeBoardTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th> ID</th>
                        <th>Notice</th>
                        <th>Description</th>
                        <th> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample Data (You can dynamically generate this using a backend) -->
                    <tr>
                        <td></td>
                    </tr>

                </tbody>
            </table>
        </div>
     </div>
    
</div>
