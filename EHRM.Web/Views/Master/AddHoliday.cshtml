@using EHRM.ViewModel.Master
@model HolidayViewModel
@{
    ViewData["Title"] = "AddHoliday";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* <link href="~/customstyle/masterholiday.css" rel="stylesheet" /> *@
 <link href="~/customstyle/style.css" rel="stylesheet" />
<script src="~/customscripts/masterholiday.js"></script>

<style>
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }
</style>



<div class="form-container">
    <h4>Add Holiday</h4>
    <div class="card p-4">
        <div class="card-body">
            <form id="holidayForm" asp-controller="Master" asp-action="SaveHoliday" method="post">
                <input type="hidden" id="holidayId" name="id" />
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Holiday Name -->
                        <div class="form-group">
                            <label for="holidayName">Holiday Name</label>
                            <input asp-for="Name" class="form-control" id="Name" name="Name" placeholder="Enter holiday name" required>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Holiday Date -->
                        <div class="form-group">
                            <label for="HolidayDate">Holiday Date</label>
                            <input asp-for="HolidayDate" type="text" class="form-control" name="HolidayDate" id="HolidayDate" data-start-day='1' data-picker-type='date'  placeholder="Select Holiday Date" readonly />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Team Name -->
                        <div class="form-group">
                            <label for="TeamId">Team Name</label>
                            <select asp-for="TeamId" class="form-control" id="TeamId" name="TeamId" required>
                               <option value=""></option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Holiday Name -->
                        <div class="form-group" class="mb-3">
                            
                                <label for="roleDescription" class="form-label">Role Description</label>
                                <textarea asp-for="Description" class="form-control" id="Description" rows="3" placeholder="Enter Role Description"></textarea>
                            
                            
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Add Holiday Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-custom">Add Holiday</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




<div class="container">
    <h4>Holiday List</h4>
    <div class="table-responsive">
        <table id="holidayTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Holiday Name</th>
                    <th>Description</th>
                    <th>Holiday Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data (You can dynamically generate this using a backend) -->
                <tr>
                    <td></td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $('#HolidayDate').datepicker({
        changeMonth: true,
        changeYear: true,
        yearRange: '1950:2070',
        dateFormat: 'dd-MM-yy',
        minDate: '0',
        defaultDate: new window.Date
    });

</script>


