@using EHRM.ViewModel.Master
@model HolidayViewModel
@{
    ViewData["Title"] = "AddHoliday";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<link href="~/customstyle/style.css" rel="stylesheet" />
<script src="~/customscripts/masterholiday.js"></script>

<div class="form-container mt-1">
    @if (TempData["ToastType"] != null && TempData["ToastMessage"] != null)
    {
        <script type="text/javascript">
                $(document).ready(function () {
                    // Call the showToast function directly with TempData values
                    showToast('@TempData["ToastType"]', '@TempData["ToastMessage"]');
            });
        </script>
    }
    <h3 class="page-heading">Add Holiday</h3>
    <div class="card p-4">
        <div class="card-body">
            <form id="holidayForm" asp-controller="Master" asp-action="SaveHoliday" method="post">
                <input type="hidden" id="holidayId" name="id" />
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Holiday Name -->
                        <div class="form-group">
                            <label for="holidayName">Holiday Name</label>
                            <input asp-for="Name" class="form-control" id="Name" name="Name" placeholder="Enter holiday name" required>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Holiday Date -->
                        <div class="form-group">
                            <label for="HolidayDate">Holiday Date</label>
                            <input asp-for="HolidayDate" type="text" class="form-control" name="HolidayDate" id="HolidayDate" data-start-day='1' data-picker-type='date'  placeholder="Select Holiday Date" readonly />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Team Name -->
                        <div class="form-group">
                            <label for="TeamId">Team Name</label>
                            <select asp-for="TeamId" class="form-control" id="TeamId" name="TeamId" required>
                               <option value=""></option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Holiday Name -->
                        <div class="form-group" class="mb-3">
                            
                                <label for="roleDescription" class="form-label">Holiday Description</label>
                                <textarea asp-for="Description" class="form-control" id="Description" rows="3" placeholder="Enter Role Description"></textarea>      
                        </div>
                    </div>
                    <!-- PDF Link Field for Holiday 2025 -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Holiday2025 mb-2">Download (Holiday 2025)</label> <br>
                            <a href="~/holiday 2025/holiday list 2025_full ist.pdf" target="_blank" class="btn btn-primary">
                                For Full IST
                            </a>
                            <a href="~/holiday 2025/holiday list 2025_half & full est.pdf" target="_blank" class="btn btn-primary">
                                For Full & Half EST
                            </a>
                            <a href="~/Holiday 2025/Holiday List 2025_Managed Services.pdf" target="_blank" class="btn btn-primary">
                                For Managed Services
                            </a>
						</div>
                    </div>
                    <!-- Right Column -->
                    <div class="col-md-6 mt-5">
                        <!-- Add Holiday Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




<div class="container">
    <h4>Holiday List</h4>
    <div class="table-responsive">
        <table id="holidayTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Holiday Name</th>
                    <th>Description</th>
                    <th>Holiday Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data (You can dynamically generate this using a backend) -->
                <tr>
                    <td></td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $('#HolidayDate').datepicker({
        changeMonth: true,
        changeYear: true,
        yearRange: '1950:2070',
        dateFormat: 'dd-MM-yy',
        minDate: '0',
        defaultDate: new window.Date
    });

</script>


