@using EHRM.ViewModel.Master
@model TeamScreenViewModel
@{
    ViewData["Title"] = "TeamScreen";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/customscripts/teamscreen.js"></script>
<link href="~/customstyle/teamscreen.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="team-board">
        <h1><u>TEAM</u></h1>
        <form asp-controller="Master" asp-action="SaveTeam" method="post" enctype="multipart/form-data">
            <input type="hidden" id="teamScreenID" name="id" />
            <!-- Team Name -->
            <div class="team-item">
                <label for="TeamName">Team Name * :</label>
                <input asp-for="Name"  name="Name" placeholder="Enter team name" required>
            </div>

            <!-- Team Description -->
            <div class="team-item">
                <label for="Description">Team Description * :</label>
                <textarea asp-for="Description" name="Description" placeholder="Enter team description" required></textarea>
            </div>

            <!-- Submit Button -->
            <div class="team-item">
                <button type="submit" class="submit-btn">ADD</button>
            </div>
        </form>
    </div>

    <!-- Team Table -->
    <div class="table">
        <h2><u>TEAM DETAILS</u></h2>
        <div class="table-responsive">
            <table id="TeamBoardTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th> ID</th>
                        <th> Name</th>
                        <th> Description</th>
                        <th> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample Data (You can dynamically generate this using a backend) -->
                    <tr>
                        <td></td>
                        
                    </tr>
                    <!-- More rows can be added dynamically -->
                </tbody>
            </table>
        </div>
    </div>
</div>

