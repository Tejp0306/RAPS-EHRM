
@{
    ViewData["Title"] = "PersonalInformationDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-heading {
        color: #007bff;
        text-align: center;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .form-container {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }
</style>

<div class="container mt-4">
    <h3 class="page-heading">Personal Information Details</h3>
    <div class="table-responsive">
        <table id="personalInfoTable1" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Email-Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data (Dynamically generated in backend) -->
                <tr>
                </tr>

            </tbody>
        </table>
    </div>
</div>

<!-- Personal Info Modal -->
<div class="modal fade" id="personalInfoModalDetail" tabindex="-1" aria-labelledby="personalInfoModalDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title " id="personalInfoModalDetailLabel">Personal Information Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="PersonalInfoForm" asp-controller="PostJoining" asp-action="SavePersonalInfoForm" method="post">

                    <!-- Employee Info -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Employee Name</label>
                            <input type="text" id="EmployeeName" name="EmployeeName" class="form-control" readonly required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Personal Email ID</label>
                            <input type="email" id="PersonalEmail" name="PersonalEmail" class="form-control" readonly required>
                        </div>
                    </div>

                    <!-- Address Section -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Permanent Address</label>
                            <input type="text" id="PermanentAddress" name="PermanentAddress" class="form-control" readonly required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Current Address</label>
                            <input type="text" id="CurrentAddress" name="CurrentAddress" class="form-control" readonly required>
                        </div>
                    </div>

                    <!-- Contact Numbers -->
                    <div class="row">
                        @*  <div class="col-md-6 mb-3">
                            <label class="form-label">Home Phone #</label>
                            <input type="text" id="HomePhoneone" name="HomePhone" class="form-control" readonly>
                        </div> *@
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mobile #</label>
                            <input type="text" id="MobilePhone" name="MobilePhone" class="form-control" readonly required>
                        </div>
                    </div>

                    <hr />

                    <!-- Emergency Contact Information -->
                    <h5 class="mt-4">Emergency Contact Information</h5>

                    <!-- Emergency Contact 1 -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Contact 1 Name</label>
                            <input type="text" id="EmergencyContact1Name" name="EmergencyContact1Name" class="form-control" readonly required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Relationship</label>
                            <input type="text" id="EmergencyContact1Relationship" name="EmergencyContact1Relationship" class="form-control" readonly required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" id="EmergencyContact1Phone" name="EmergencyContact1Phone" class="form-control" readonly required>
                        </div>
                    </div>

                    <!-- Emergency Contact 2 -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Contact 2 Name</label>
                            <input type="text" id="EmergencyContact2Nameone" name="EmergencyContact2Name" class="form-control" readonly>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Relationship</label>
                            <input type="text" id="EmergencyContact2Relationship" name="EmergencyContact2Relationship" class="form-control" readonly>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" id="EmergencyContact2Phone" name="EmergencyContact2Phone" class="form-control" readonly>
                        </div>
                    </div>

                    <!-- Signature and Date -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Signature</label>
                            <input type="text" id="Signature" name="Signature" class="form-control" value="@ViewData["Name"]" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date</label>
                            <input type="text" id="FormDate" name="FormDateOne" class="form-control" required readonly>
                        </div>
                    </div>

                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="downloadBtn" class="btn btn-success">
                        <i class="bi bi-download"></i> Download
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery (Required for DataTables and AJAX) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Bootstrap JS (Required for Modal) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- DataTables JS (Required for Table) -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


<script src="~/JsPDF/jspdf.js"></script>
<script>
        $(document).ready(function () {
        getPersonalInfoDataDetail();
    });

    // Function to fetch acknowledgment data and populate the DataTable
    function getPersonalInfoDataDetail() {
        $('#personalInfoTable1').DataTable({
            destroy: true, // Ensures reloading without duplication
            ajax: {
                url: '/PostJoining/GetPersInfoForm', // API to get acknowledgment forms
                method: 'GET',
                dataSrc: '' // Assuming JSON array response
            },
            columns: [
                { data: 'employeeName' },
            { data: 'personalEmail' },
                {
                    data: 'id',
                    render: function (data) {
                        return `
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-info btn-sm mx-1 view-btn" data-id="${data}">
                                    <i class="bi bi-eye"></i> View & Download
                                </button>
                            </div>
                        `;
                    },
                    orderable: false
                }
            ],
            pageLength: 5,
            lengthMenu: [5, 10, 15, 20]
        });

        // Bind click event for dynamically added buttons
        $('#personalInfoTable1 tbody').on('click', '.view-btn', function () {
            const id = $(this).data('id');
            personalInfoModalDetail(id);
        });
    }

    // Function to open the modal and load acknowledgment details
    function personalInfoModalDetail(personalInfoID) {
          $.ajax({
            url: `/PostJoining/GetPersInfoById/${personalInfoID}`,
            method: 'GET',
            success: function (response) {
                if (response.success) {

                    const data = response.data.data || response.data;

                    // Populate modal fields
                    $('#EmployeeName').val(data?.employeeName || "N/A");
                    $('#PersonalEmail').val(data?.personalEmail || "N/A");
                    $('#PermanentAddress').val(data?.permanentAddress || "N/A");
                    $('#CurrentAddress').val(data?.currentAddress || "N/A");
                    $('#MobilePhone').val(data?.mobilePhone || "N/A");

                    // Emergency Contacts
                    $('#EmergencyContact1Name').val(data?.emergencyContact1Name || "N/A");
                    $('#EmergencyContact1Relationship').val(data?.emergencyContact1Relationship || "N/A");
                    $('#EmergencyContact1Phone').val(data?.emergencyContact1Phone || "N/A");

                    $('#EmergencyContact2Nameone').val(data?.emergencyContact2Name || "N/A");
                    $('#EmergencyContact2Relationship').val(data?.emergencyContact2Relationship || "N/A");
                    $('#EmergencyContact2Phone').val(data?.emergencyContact2Phone || "N/A");

                    // Signature and Date
                    $('#Signature').val(data?.signature || "N/A");
                    $('#FormDate').val(data?.formDate || "N/A");

                    // Ensure download button exists
                    if ($('#downloadBtn').length === 0) {
                        $('#personalInfoModal .modal-footer').append(`
                            <button id="downloadBtn" class="btn btn-primary">Download PDF</button>
                        `);
                    }

                    // Attach click event (ensure no duplicate events)
                    $('#downloadBtn').off('click').on('click', function () {
                        downloadPersonalInfoDetail(data);
                    });

                    // Show the modal
                    $('#personalInfoModalDetail').modal('show');
                } else {
                    alert("Error: " + response.message);
                }
            },
            error: function () {
                alert("An error occurred while fetching the data.");
            }
        });
    }

        function downloadPersonalInfoDetail(data) {
        const jsPDF = window.jspdf.jsPDF;
        const doc = new jsPDF();

        // Extract modal content
        const employeeName = $('#EmployeeName').val() || "N/A";
        const personalEmail = $('#PersonalEmail').val() || "N/A";
        const permanentAddress = $('#PermanentAddress').val() || "N/A";
        const currentAddress = $('#CurrentAddress').val() || "N/A";
        const mobilePhone = $('#MobilePhone').val() || "N/A";
        const emergencyContact1Name = $('#EmergencyContact1Name').val() || "N/A";
        const emergencyContact1Relationship = $('#EmergencyContact1Relationship').val() || "N/A";
        const emergencyContact1Phone = $('#EmergencyContact1Phone').val() || "N/A";
        const emergencyContact2Name = $('#EmergencyContact2Nameone').val() || "N/A";
        const emergencyContact2Relationship = $('#EmergencyContact2Relationship').val() || "N/A";
        const emergencyContact2Phone = $('#EmergencyContact2Phone').val() || "N/A";
        const signature = $('#Signature').val() || "N/A";
        const formDate = $('#FormDate').val() || "N/A";

        // Set PDF Title
        doc.setFont("helvetica", "bold");
        doc.setFontSize(16);
        doc.text("Personal Information Form", 20, 20);

        // Set Content
        doc.setFont("helvetica", "normal");
        doc.setFontSize(12);
        doc.text(`Employee Name: ${employeeName}`, 20, 40);
        doc.text(`Personal Email ID: ${personalEmail}`, 20, 50);
        doc.text(`Permanent Address: ${permanentAddress}`, 20, 60);
        doc.text(`Current Address: ${currentAddress}`, 20, 70);
        doc.text(`Mobile Phone #: ${mobilePhone}`, 20, 80);

        // Emergency Contact Information
        doc.text("Emergency Contact 1:", 20, 100);
        doc.text(`Name: ${emergencyContact1Name}`, 20, 110);
        doc.text(`Relationship: ${emergencyContact1Relationship}`, 20, 120);
        doc.text(`Phone #: ${emergencyContact1Phone}`, 20, 130);

        doc.text("Emergency Contact 2:", 20, 140);
        doc.text(`Name: ${emergencyContact2Name}`, 20, 150);
        doc.text(`Relationship: ${emergencyContact2Relationship}`, 20, 160);
        doc.text(`Phone #: ${emergencyContact2Phone}`, 20, 170);

        // Signature and Date
        doc.text(`Signature: ${signature}`, 20, 180);
        doc.text(`Date: ${formDate}`, 20, 190);

        // Save as PDF
        doc.save(`Personal_Info_Form_${data.id || "Unknown"}.pdf`);
    }
</script>
