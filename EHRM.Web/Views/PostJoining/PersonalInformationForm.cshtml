@model PersonalInfomationViewModel
@using EHRM.ViewModel.PostJoining

@{
    ViewData["Title"] = "Personal Information Form";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .page-heading {
        color: #007bff;
        text-align: center;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: #0056b3;
    }

    .form-container {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<div class="container mt-4">
    <div class="col-12 text-center py-2 mb-3">
        <h3 class="page-heading">Personal Information Form</h3>
    </div>

    <div class="card p-4">
        @if (TempData["ToastType"] != null && TempData["ToastMessage"] != null)
        {
            <script type="text/javascript">
                $(document).ready(function () {
                    showToast('@TempData["ToastType"]', '@TempData["ToastMessage"]');
                });
            </script>
        }
        <div class="card-body">
            <form id="PersonalInfoForm" asp-controller="PostJoining" asp-action="SavePersonalInfoForm" method="post">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Employee Name</label>
                        <input asp-for="EmployeeName" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Personal Email ID</label>
                        <input asp-for="PersonalEmail" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Permanent Address</label>
                        <input asp-for="PermanentAddress" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Current Address</label>
                        <input asp-for="CurrentAddress" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Home Phone #</label>
                        <input asp-for="HomePhone" class="form-control">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Mobile #</label>
                        <input asp-for="MobilePhone" class="form-control" required>
                    </div>
                </div>

                <hr/>
                <h5 class="mt-4">Emergency Contact Information</h5>

                <!-- Emergency Contact 1 -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Contact 1 Name</label>
                        <input asp-for="EmergencyContact1Name" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Relationship</label>
                        <input asp-for="EmergencyContact1Relationship" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="EmergencyContact1Phone" class="form-control" required>
                    </div>
                </div>

                <!-- Emergency Contact 2 -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Contact 2 Name</label>
                        <input asp-for="EmergencyContact2Name" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Relationship</label>
                        <input asp-for="EmergencyContact2Relationship" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="EmergencyContact2Phone" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Signature</label>
                        <input asp-for="Signature" class="form-control" value="@ViewData["Name"]" readonly>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Date</label>
                        <input asp-for="FormDate" type="text" class="form-control" id="FormDate" required readonly>
                    </div>
                </div>

                <button type="submit" class="btn btn-custom w-10">Submit</button>

            </form>
        </div>
    </div>
</div>

<div class="container mt-4">
    <h3 class="page-heading">Personal Information Records</h3>
    <div class="table-responsive">
        <table id="personalInfoTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Email-Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data (Dynamically generated in backend) -->
                <tr>
                </tr>

            </tbody>
        </table>
    </div>
</div>

<!-- Personal Info Modal -->
<div class="modal fade" id="personalInfoModal" tabindex="-1" aria-labelledby="personalInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title page-heading" id="personalInfoModalLabel">Personal Information Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="PersonalInfoForm" asp-controller="PostJoining" asp-action="SavePersonalInfoForm" method="post">

                    <!-- Employee Info -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Employee Name</label>
                            <input type="text" id="EmployeeNameOne" name="EmployeeName" class="form-control" readonly required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Personal Email ID</label>
                            <input type="email" id="PersonalEmailone" name="PersonalEmail" class="form-control" readonly required>
                        </div>
                    </div>

                    <!-- Address Section -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Permanent Address</label>
                            <input type="text" id="PermanentAddressone" name="PermanentAddress" class="form-control" readonly required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Current Address</label>
                            <input type="text" id="CurrentAddressone" name="CurrentAddress" class="form-control" readonly required>
                        </div>
                    </div>

                    <!-- Contact Numbers -->
                    <div class="row">
                       @*  <div class="col-md-6 mb-3">
                            <label class="form-label">Home Phone #</label>
                            <input type="text" id="HomePhoneone" name="HomePhone" class="form-control" readonly>
                        </div> *@
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mobile #</label>
                            <input type="text" id="MobilePhoneone" name="MobilePhone" class="form-control" readonly required>
                        </div>
                    </div>

                    <hr />

                    <!-- Emergency Contact Information -->
                    <h5 class="mt-4">Emergency Contact Information</h5>

                    <!-- Emergency Contact 1 -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Contact 1 Name</label>
                            <input type="text" id="EmergencyContact1Nameone" name="EmergencyContact1Name" class="form-control" readonly required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Relationship</label>
                            <input type="text" id="EmergencyContact1Relationshipone" name="EmergencyContact1Relationship" class="form-control" readonly required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" id="EmergencyContact1Phoneone" name="EmergencyContact1Phone" class="form-control" readonly required>
                        </div>
                    </div>

                    <!-- Emergency Contact 2 -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Contact 2 Name</label>
                            <input type="text" id="EmergencyContact2Nameone" name="EmergencyContact2Name" class="form-control" readonly>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Relationship</label>
                            <input type="text" id="EmergencyContact2Relationshipone" name="EmergencyContact2Relationship" class="form-control" readonly>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" id="EmergencyContact2Phoneone" name="EmergencyContact2Phone" class="form-control" readonly>
                        </div>
                    </div>

                    <!-- Signature and Date -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Signature</label>
                            <input type="text" id="Signatureone" name="Signature" class="form-control" value="@ViewData["Name"]" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date</label>
                            <input type="text" id="FormDateOne" name="FormDateOne" class="form-control" required readonly>
                        </div>
                    </div>

                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="downloadBtn" class="btn btn-success">
                        <i class="bi bi-download"></i> Download
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/JsPDF/jspdf.js"></script>
<script src="~/CustomScripts/PersonalInfo.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var today = new Date();
        var formattedDate = today.getFullYear() + '-' +
                            ('0' + (today.getMonth() + 1)).slice(-2) + '-' +
                            ('0' + today.getDate()).slice(-2);  // Format: YYYY-MM-DD
        $("#FormDate").val(formattedDate);
    });
</script>
