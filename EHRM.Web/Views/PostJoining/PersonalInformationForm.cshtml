@model PersonalInfomationViewModel
@using EHRM.ViewModel.PostJoining

@{
    ViewData["Title"] = "Personal Information Form";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .page-heading {
        color: #007bff;
        text-align: center;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: #0056b3;
    }

    .form-container {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<div class="container mt-4">
    <div class="col-12 text-center py-2 mb-3">
        <h3 class="page-heading">Personal Information Form</h3>
    </div>

    <div class="card p-4">
        @if (TempData["ToastType"] != null && TempData["ToastMessage"] != null)
        {
            <script type="text/javascript">
                $(document).ready(function () {
                    showToast('@TempData["ToastType"]', '@TempData["ToastMessage"]');
                });
            </script>
        }
        <div class="card-body">
            <form id="PersonalInfoForm" asp-controller="PostJoining" asp-action="SavePersonalInfoForm" method="post">
                <input type="hidden" id="empId" name="empId" value="@ViewData["empId"]">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Employee Name</label>
                        <input asp-for="EmployeeName" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Personal Email ID</label>
                        <input asp-for="PersonalEmail" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Permanent Address</label>
                        <input asp-for="PermanentAddress" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Current Address</label>
                        <input asp-for="CurrentAddress" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Home Phone #</label>
                        <input asp-for="HomePhone" class="form-control">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Mobile #</label>
                        <input asp-for="MobilePhone" class="form-control" required>
                    </div>
                </div>

                <hr/>
                <h5 class="mt-4">Emergency Contact Information</h5>

                <!-- Emergency Contact 1 -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Contact 1 Name</label>
                        <input asp-for="EmergencyContact1Name" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Relationship</label>
                        <input asp-for="EmergencyContact1Relationship" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="EmergencyContact1Phone" class="form-control" required>
                    </div>
                </div>

                <!-- Emergency Contact 2 -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Contact 2 Name</label>
                        <input asp-for="EmergencyContact2Name" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Relationship</label>
                        <input asp-for="EmergencyContact2Relationship" class="form-control" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="EmergencyContact2Phone" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Signature</label>
                        <input asp-for="Signature" class="form-control" value="@ViewData["Name"]" readonly>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Date</label>
                        <input asp-for="FormDate" type="text" class="form-control" id="FormDate" required readonly>
                    </div>
                </div>

                <button type="submit" class="btn btn-custom w-10">Submit</button>

            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var today = new Date();
        var formattedDate = today.getFullYear() + '-' +
                            ('0' + (today.getMonth() + 1)).slice(-2) + '-' +
                            ('0' + today.getDate()).slice(-2);  // Format: YYYY-MM-DD
        $("#FormDate").val(formattedDate);
    });
</script>
