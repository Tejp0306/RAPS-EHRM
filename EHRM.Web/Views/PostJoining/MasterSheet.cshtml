<script>
    $(document).ready(function () {
        let experienceIndex = 1; // Initial index for array-based name bindings

        // ✅ Add New Experience Row
        $('#addExperienceBtn').on('click', function () {
            const newRow = `
                <div class="experience-entry row mb-3">
                    <!-- Hidden Field for EmpId -->
                    <input type="hidden" name="MasterWorkExperience[${experienceIndex}].EmpId" value="@empIdFromSession" />
                    <div class="col-md-6">
                        <label>Organisation Name</label>
                        <input name="MasterWorkExperience[${experienceIndex}].OrganisationName" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Designation</label>
                        <input name="MasterWorkExperience[${experienceIndex}].Designation" class="form-control" />
                    </div>
                    <div class="col-md-6 mt-3">
                        <label>Years of Experience</label>
                        <input name="MasterWorkExperience[${experienceIndex}].YearsOfExperience" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="col-md-6 mt-3">
                        <label>From Date</label>
                        <input name="MasterWorkExperience[${experienceIndex}].FromDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mt-3">
                        <label>To Date</label>
                        <input name="MasterWorkExperience[${experienceIndex}].ToDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mt-3">
                        <label>Reason for Leaving</label>
                        <textarea name="MasterWorkExperience[${experienceIndex}].ReasonForLeaving" class="form-control"></textarea>
                    </div>
                    <!-- Remove Button -->
                    <div class="col-md-2 mt-4 d-flex align-items-end">
                        <button type="button" class="btn btn-danger remove-experience">Remove</button>
                    </div>
                </div>`;

            $('#experienceSection').append(newRow);
            experienceIndex++;
        });

        // ❌ Remove Experience Row
        $(document).on('click', '.remove-experience', function () {
            $(this).closest('.experience-entry').remove();
        });
    });
</script>







