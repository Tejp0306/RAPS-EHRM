
@{
    ViewData["Title"] = "SelfPortal";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using EHRM.ViewModel.Employee
@model GetAllEmployeeViewModel
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Self Portal</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-section {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .profile-section img {
                max-width: 150px;
                border-radius: 50%;
            }

            .profile-section .labels {
                font-weight: bold;
            }

            .profile-section .form-control {
                background-color: #f9f9f9;
            }

        .edit-btn {
            cursor: pointer;
            color: #007bff;
        }

        .profile-header {
            text-align: center;
            width:200px;
            height:200px;
        }

            .profile-header img {
                width:auto;
                /* height: 150px; */
                border-radius: 50%;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="col-12 text-grey text-center py-1 mb-4">
            <h2 class="mb-0 text-Black">Profile</h2>
        </div>

        <!-- Main Row -->
        <div class="row justify-content-center">
            <!-- Profile Section -->
            <div class="col-md-4 text-center">
                <!-- Profile Image Section -->
                <div class="col-md-4 text-center">
                    <div class="profile-header">
                        <img src="@Model.FileName" alt="Profile Image" class="img-fluid rounded-circle">
                        <h4 class="font-weight-bold">@Model.FirstName @Model.LastName</h4>
                        <span class="text-black-50">@Model.EmailAddress</span>
                    </div>
                </div>
            </div>

            <!-- Profile Settings Form Section (Take full width of the screen) -->
            <div class="col-md-8">
                <!-- This section now takes up the remaining space -->
                <!-- Profile Settings Form -->
                <div class="">
                    <div class="row mt-2">
                        <!--Emp_ID Name and Surname fields (6 columns each) -->
                        <div class="col-md-4">
                            <label class="labels">Employee ID *</label>
                            <input type="text" class="form-control" placeholder="Enter Employee ID" value="@Model.EmpId" disabled>
                        </div>
                        <div class="col-md-4">
                            <label class="labels">First Name</label>
                            <input type="text" class="form-control" placeholder="First Name" value="@Model.FirstName" disabled>
                        </div>
                        <div class="col-md-4">
                            <label class="labels">Last Name</label>
                            <input type="text" class="form-control" placeholder="Surname" value="@Model.LastName" disabled>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Mobile Number field (12 columns) -->
                        <div class="col-md-6">
                            <label class="labels">Mobile Number</label>
                            <input type="text" class="form-control" placeholder="Enter phone number" value="@Model.CellPhone" disabled>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Date of Birth *</label>
                            <input type="text" class="form-control" placeholder="Enter Your D.O.B" value="@Model.DateOfBirth" disabled>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <!-- Address fields (6 columns each) -->
                        <div class="col-md-6">
                            <label class="labels">Address Line 1</label>
                            <input type="text" class="form-control" placeholder="Enter address line 1" value="@Model.Street" disabled>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Address Line 2</label>
                            <input type="text" class="form-control" placeholder="Enter address line 2" value="@Model.City @Model.Country @Model.ZipCode" disabled>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Postcode, State, Area (4 columns each) -->
                        <div class="col-md-4">
                            <label class="labels">Postcode</label>
                            <input type="text" class="form-control" placeholder="Enter postcode" value="@Model.ZipCode" disabled>
                        </div>
                        <div class="col-md-4">
                            <label class="labels">State</label>
                            <input type="text" class="form-control" placeholder="Enter state" value="" disabled>
                        </div>
                        <div class="col-md-4">
                            <label class="labels">Area</label>
                            <input type="text" class="form-control" placeholder="Enter area" value="" disabled>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Email and Education fields (6 columns each) -->
                        <div class="col-md-6">
                            <label class="labels">Email ID</label>
                            <input type="email" class="form-control" placeholder="Enter email ID" value="@Model.EmailAddress" disabled>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Education</label>
                            <input type="text" class="form-control" placeholder="Education" value="" disabled>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Country and State/Region (6 columns each) -->
                        <div class="col-md-6">
                            <label class="labels">Country</label>
                            <input type="text" class="form-control" placeholder="Country" value="" disabled>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">State/Region</label>
                            <input type="text" class="form-control" placeholder="State/Region" value="" disabled>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <!-- Manager and Team Region -->
                        <div class="col-md-6">
                            <label class="labels">Manager Name</label>
                            <input type="text" class="form-control" placeholder="Enter Manager Name" value="" id="modalCountry" disabled>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Team Name</label>
                            <input type="text" class="form-control" placeholder="Enter Team Name" value="@Model.TeamName" id="modalStateRegion" disabled    >
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="button">Save Profile</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

