<style>
    #toaster-container .bg-error {
        background-color:red !important;
    }
</style>

<div id="toaster-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
    <!-- Toasts will be appended here dynamically -->
</div>

<script>
    function showToast(type, message) {
        const toastTemplate = `
                <div class="toast align-items-center bg-${type} text-white border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
        const $toast = $(toastTemplate);
        $("#toaster-container").append($toast);

        const bootstrapToast = new bootstrap.Toast($toast[0]);
        bootstrapToast.show();

        $toast.on("hidden.bs.toast", function () {
            $(this).remove();
        });
    }

    // Check if TempData exists, then call showToast
 
</script>
