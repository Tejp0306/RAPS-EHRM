@using EHRM.ViewModel.MainMenu
@model MainMenuViewModel
@{
    ViewData["Title"] = "AddMenu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<link href="~/customstyle/style.css" rel="stylesheet" />
@* <link href="~/customstyle/mainmenu.css" rel="stylesheet" /> *@
<script src="~/customscripts/mastermenu.js"></script>
<div class="form-container">
    <h4>Add MainMenu</h4>
    <div class="card p-4">
        <div class="card-body">
            <form id="mainmenuForm" asp-controller="Menu" asp-action="SaveMainMenu" method="post">
                <input type="hidden" id="menuId" name="id" />
                <!-- Form Fields -->
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Name">Name</label>
                            @* <input asp-for="Name" class="form-control" id="Name" name="Name" placeholder="Enter MainMenu name" required> *@
                            <input asp-for="Name" class="form-control" id="Name" name="Name" placeholder="Enter MainMenu name" required />
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Icon">Icon</label>
                            @* <input asp-for="Icon" type="text" class="form-control" id="Icon" name="Icon" placeholder="Enter Icon Name" required> *@
                            <input asp-for="Icon" class="form-control" id="Icon" name="Icon" placeholder="Icon" required />
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row mt-4">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success">Add MainMenu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


